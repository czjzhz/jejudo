<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="adrvrpns">
 	<resultMap id="adrvrprm" type="adrr" >
		<result property="rrno"	 	   	column="rnro" />
		<result property="rrcont"	 	   	column="rrcont" />
		<result property="rrnickname"	 	   	column="rrnickname" />
		<result property="rrreg"	 	   	column="rrreg" />
		<result property="rrupdate"	 	   	column="rrupdate" />
		<result property="rno"	 	   	column="rro" />
	</resultMap> 
	

 	<select id="ReviewRpview" parameterType="int" resultMap="adrvrprm">
 		select * from boardreviewreply where rno=#{rno} order by rrreg desc
	</select>
	
	
 </mapper>