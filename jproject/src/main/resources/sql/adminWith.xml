<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="adwtns">
 	<resultMap id="adwtrm" type="adwt" >
		<result property="ano"	column="ano" />
		<result property="asub"	column="asub" />
		<result property="acont"	column="acont" />
		<result property="areadcount"	column="areadcount" />
		<result property="areg"	column="areg" />
		<result property="astart"	column="astart" />
		<result property="acond"	column="acond" />
		<result property="atransport"	column="atransport" />
		<result property="acate"	column="acate" />
		<result property="apeople"	column="apeople" />
		<result property="amoney"	column="amoney" />
		<result property="adel"	column="adel" />
		<result property="id"	column="id" />
		<result property="nickname"	column="nickname" />
		<result property="afile"	column="afile" />
		<result property="agender"	column="agender" />
		<result property="ain"	column="ain" />
	</resultMap> 
	
 	<select id="WithList" parameterType="adwt" resultMap="adwtrm">
 		select * from (select a.*, rowNum rn from(
 			select * from boardaccom order by ano desc) a )
			where rn between #{startRow} and #{endRow}
	</select>
	
	<select id="getWithTotal" parameterType="adwt" resultType="int">
		select count(*) from boardaccom
	</select>
	
	 <select id="Withview" parameterType="int" resultMap="adwtrm">
 		select * from boardaccom where ano=#{ano}
	</select>
	
	<update id="withChangetN" parameterType="int">
		update boardaccom set adel='n' where ano=#{ano}
	</update>
	
	<update id="withChangeY" parameterType="int">
		update boardaccom set adel='y' where ano=#{ano}
	</update>
	
	<delete id="WithDelete" parameterType="int">
		delete from boardaccom where ano=#{ano}
	</delete>
	
 </mapper>