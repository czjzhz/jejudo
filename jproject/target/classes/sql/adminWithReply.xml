<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="adwtrpns">
 	<resultMap id="adwtrprm" type="adwr" >
		<result property="arno"	 	   	column="arno" />
		<result property="arcont"	 	   	column="arcont" />
		<result property="arnickname"	 	   	column="arnickname" />
		<result property="arreg"	 	   	column="arreg" />
		<result property="arupdate"	 	   	column="arupdate" />
		<result property="ano"	 	   	column="ano" />
	</resultMap> 
	

 	<select id="WithRpview" parameterType="int" resultMap="adwtrprm">
 		select * from boardaccomreply where ano=#{ano} order by arreg desc
	</select>
	
	<delete id="WithRpDelete" parameterType="int">
		delete from boardaccomreply where arno=#{arno}
	</delete>
	
	
 </mapper>