<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="messagens">

	<!-- 쪽지 작성 -->
	<insert id="insert" parameterType="message">
		insert into message
		values(message_seq.nextval,#{sendid},
		#{rcvid},#{msubject},#{mcontent},sysdate,0)
	</insert>
	
	<!-- 보낸 쪽지 갯수 -->
	<select id="scount" parameterType="message"  resultType="int">
		select count(*) from message where sendid = #{nickname}
	</select>
	
	<!-- 보낸 쪽지 리스트 -->
	<select id="sendlist" parameterType="Map" resultType="message">
		select * from (select rownum rnum, message.* from 
		(select * from message where sendid=#{nickname} order by mno desc) message )
		where rnum&gt;=((#{page}-1) * 10+1) and rnum&lt;=(#{page}*10) 
	</select>
	
	<!-- 받은 쪽지 갯수 -->
	<select id="rcount" parameterType="message"  resultType="int">
		select count(*) from message where rcvid = #{nickname}
	</select>
	
	<!-- 받은 쪽지 리스트 -->
	<select id="rcvlist" parameterType="Map" resultType="message">
		select * from (select rownum rnum, message.* from 
		(select * from message where rcvid=#{nickname} order by mno desc) message )
		where rnum&gt;=((#{page}-1) * 10+1) and rnum&lt;=(#{page}*10) 
	</select>
	
	<!-- 받은 쪽지 상세정보 구하기 -->
	<select id="messagesendview" parameterType="int" resultType="message">
		select * from message where mno = #{mno}
	</select>
	
	<!-- 받은 쪽지 상세정보 구하기 -->
	<select id="messagercvview" parameterType="int" resultType="message">
		select * from message where mno = #{mno}
	</select>
	
 	<!-- 답장 작성 -->
	<insert id="insertreply" parameterType="message">
		insert into message
		values(message_seq.nextval,#{sendid},
		#{rcvid},#{msubject},#{mcontent},sysdate,0)
	</insert>
	
	<!-- 쪽지 삭제 -->
	<delete id="delete" parameterType="int">
		delete from message where mno = #{mno}
	</delete>
</mapper>